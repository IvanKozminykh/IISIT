    {
      "id": "r-rtx-5070",
      "salience": 70,
      "when": {
        "all": [
          { "fact": "minimalistic-look", "op": "==", "value": "yes" },
          { "fact": "recommendation-made", "op": "==", "value": "no" }
        ]
      },
      "then": [
        { "assert": { "fact": "recommendation", "value": "RTX-5070" } },
        { "assert": { "fact": "recommendation-made", "value": "yes" } }
