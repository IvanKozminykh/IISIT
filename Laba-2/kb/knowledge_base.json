    {
      "id": "r-rtx-5060-ti",
      "salience": 60,
      "when": {
        "all": [
          { "fact": "minimalistic-look", "op": "==", "value": "yes" },
          { "fact": "minimum-cost", "op": "==", "value": "yes" },
